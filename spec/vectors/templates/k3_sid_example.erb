it '<%= name %>' do
  <%- if expect_fail -%>
  # Direct calls against Operations are not supported and the Key API prevents lucidity issues
  <%- else -%>
  ikm = Paseto::Util.decode_hex('<%= key %>')
  paserk = %[<%= paserk %>]

  key = Paseto::V3::Public.from_scalar_bytes(ikm)
  expect(key.id).to eq(paserk)
  <%- end -%>
end
